<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ahmet.postphotos.UI.Main.Fragments.ConversationFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerFragmentConv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp">

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/second_card_height"
        android:layout_alignBottom="@+id/recyclerFragmentConv"
        android:layout_alignRight="@+id/recyclerFragmentConv"
        app:srcCompat="@drawable/ic_chat_black_24dp" />

</RelativeLayout>
