<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.Account.Settings.ChangeEmailAndPassword">

    <include
        layout="@layout/app_tool_bar"
        android:id="@+id/toolbar_change_email_and_password"/>



            <ProgressBar
                android:id="@+id/progressBarSettings"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:indeterminate="true"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/text_title_change_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/change_email"
                    android:textColor="@color/darkColor"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/text_change_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_weight="3"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/edit_text"
                        android:hint="@string/email_placeholder"
                        android:padding="10dp" />

                    <Button
                        android:id="@+id/btn_change_email"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_gravity="left"
                        android:layout_weight="0"
                        android:background="@drawable/btn_bg_change_email_password"
                        android:text="Change e-mail"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBalck"
                        android:layout_marginLeft="15sp"
                        android:layout_marginStart="15sp"/>
                </LinearLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/text_title_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:text="@string/change_password"
                    android:textColor="@color/darkColor"
                    android:textSize="18sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/text_old_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text"
                        android:hint="@string/old_password"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"/>
                    <EditText
                        android:id="@+id/text_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text"
                        android:hint="@string/new_password"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"/>
                    <EditText
                        android:id="@+id/text_confirm_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text"
                        android:hint="@string/confirm_new_password"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp" />

                    <Button
                        android:id="@+id/btn_change_password"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_gravity="left"
                        android:layout_weight="0"
                        android:background="@drawable/btn_bg_change_email_password"
                        android:text="Change e-mail"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBalck"
                        android:layout_marginLeft="15sp"
                        android:layout_marginStart="15sp"/>

                </LinearLayout>

                <TextView
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:text="@string/change_language"
                    android:textColor="@color/darkColor"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorAccentDark" />

                <LinearLayout
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/btn_change_language"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:layout_gravity="left"
                        android:background="@drawable/btn_bg"
                        android:text="@string/change_language"
                        android:textAllCaps="false"
                        android:textColor="@color/whiteColor" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:text="@string/delete_account"
                    android:textColor="@color/darkColor"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorAccentDark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/btnDeleteAccount"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:layout_gravity="left"
                        android:background="@drawable/btn_bg_delete_account"
                        android:text="@string/delete_account"
                        android:textAllCaps="false"
                        android:textColor="#f00" />
                </LinearLayout>

            </LinearLayout>


</LinearLayout>